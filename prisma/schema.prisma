generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // For connection pooling
  directUrl = env("DIRECT_URL") // For migrations
}

// Tracks global statistics for the entire platform (e.g., total applications)
// This table is designed to have only one row.
model GlobalStats {
  id                String @id @default("main_stats")
  totalApplications Int    @default(0)
}

// Stores detailed application history for individual users (for future login feature)
model Application {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  title       String
  description String
  link        String
  source      String
  // In the future, you can add a relation to a User model like so:
  // userId String
  // user   User   @relation(fields: [userId], references: [id])
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  username     String        @unique
  name         String
  lastName     String
  phone        String
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]
}

model RevokedToken {
  id        String   @id @default(cuid())
  token     String   @unique
  revokedAt DateTime @default(now())
}
